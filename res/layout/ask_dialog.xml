        <EditText android:id="@+id/question" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="这个岛上有酒店吗?"
                  android:textColor="#000000" android:inputType="textImeMultiLine"
                >
        </EditText>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_alignParentBottom="true">
        <Button android:id="@+id/btnCancel" android:layout_width="80dp" android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:alpha="1.0"
                android:gravity="center"
                android:text="取消"
                android:textSize="18dp"
                android:textColor="#000000"/>
        <Button android:id="@+id/btnSend" android:layout_width="80dp" android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:alpha="1.0"
                android:gravity="center"
                android:text="发送"
                android:textSize="18dp"
